{{!-- usually index.hbs shows all the rows in the table --}}

{{#extends "base"}}

{{#block "content"}}
<h1>All Customers</h1>

<form method="GET">
    <div class="mt-3">
        <label>First Name</label>
        <input type="text" name="first_name" class="form-control" value="{{first_name}}"/>
    </div>
    <div class="mt-3">
        <label>Last Name</label>
        <input type="text" name="last_name" class="form-control" value="{{last_name}}"/>
    </div>
    <div class="mt-3">
        <label>Rating</label>
        <input type="text" name="rating" class="form-control" value="{{rating}}"/>
    </div>
    <div class="mt-3">
        <label>Company ID</label>
        <input type="text" name="company_id" class="form-control" value="{{company_id}}"/>
    </div>
    <input type="submit" value="Search" class="btn btn-primary mt-3"/>

</form>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Rating</th>
            <th>Company ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each customers}}
        {{!-- kinda does a for loop for each customers repeat the 4 td --}}
        <tr>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.rating}}</td>
            <td>{{this.name}}</td>
            <td>
                <a href="/customers/{{this.customer_id}}/update" class="btn btn-primary">Update</a>
                <a href="/customers/{{this.customer_id}}/delete" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>



{{/block }}

{{/extends }}